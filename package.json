{
	"name": "dotcom-rendering",
	"version": "1.0.0",
	"repository": "git@github.com:guardian/dotcom-rendering.git",
	"license": "Apache-2.0",
	"private": true,
	"scripts": {
		"storybook": "npm-run-all --parallel storybook:*",
		"storybook:composed": "sleep 5 && pnpm -F storybooks storybook --quiet",
		"storybook:cr": "pnpm -F @guardian/common-rendering storybook --no-open --quiet",
		"storybook:dcr": "pnpm -F @guardian/dotcom-rendering storybook --no-open --quiet",
		"storybook:ar": "pnpm -F @guardian/apps-rendering storybook --no-open --quiet",
		"build-storybook": "npm-run-all --parallel build-storybook:*",
		"build-storybook:ar": "pnpm -F @guardian/apps-rendering build-storybook",
		"build-storybook:cr": "pnpm -F @guardian/common-rendering build-storybook",
		"build-storybook:dcr": "pnpm -F @guardian/dotcom-rendering build-storybook",
		"build-storybook:composed": "pnpm -F storybooks build-storybook",
		"build:dcr": "pnpm -F @guardian/dotcom-rendering makeBuild",
		"chromatic": "chromatic --build-script-name=build-storybook --exit-zero-on-changes",
		"prepare": "husky install"
	},
	"dependencies": {
		"@guardian/prettier": "^2.0.0",
		"chromatic": "^6.11.4",
		"husky": "^7.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.0"
	}
}
