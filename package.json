{
  "name": "dotcom-rendering",
  "version": "1.0.0",
  "repository": "git@github.com:guardian/dotcom-rendering.git",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "common-rendering",
    "dotcom-rendering",
    "composed-storybooks"
  ],
  "scripts": {
    "postinstall": "cd apps-rendering && if [ \"$CI\" = true ]; then yarn --frozen-lockfile ; else yarn ; fi",
    "storybook": "npm-run-all --parallel -l storybook:*",
    "storybook:composed": "sleep 5 && yarn workspace composed-storybooks storybook --quiet",
    "build-storybook": "node --max-old-space-size=4096 $(yarn bin)/build-storybook --static-dir ./dotcom-rendering/src/static",
    "storybook:ar": "cd apps-rendering && yarn storybook --no-open --quiet",
    "storybook:cr": "yarn workspace @guardian/common-rendering storybook --no-open --quiet",
    "storybook:dcr": "yarn workspace @guardian/dotcom-rendering storybook --no-open --quiet",
    "build:dcr": "cd ./dotcom-rendering && yarn makeBuild",
    "chromatic": "chromatic --build-script-name=build-storybook --exit-zero-on-changes",
    "prepare": "husky install"
  },
  "resolutions": {
    "@types/webpack": "^5.28.0",
    "type-fest": "^2.8.0"
  },
  "dependencies": {
    "@guardian/prettier": "^1.0.0",
    "chromatic": "^6.5.1",
    "husky": "^7.0.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
