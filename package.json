{
  "name": "dotcom-rendering",
  "version": "1.0.0",
  "repository": "git@github.com:guardian/dotcom-rendering.git",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "dotcom-rendering",
    "common-rendering",
    "storybooks"
  ],
  "scripts": {
    "postinstall": "cd apps-rendering && if [ \"$CI\" = true ]; then yarn --frozen-lockfile ; else yarn ; fi",
    "storybook": "npm-run-all --parallel storybook:*",
    "storybook:composed": "sleep 5 && yarn workspace storybooks storybook --quiet",
    "storybook:cr": "yarn workspace @guardian/common-rendering storybook --no-open --quiet",
    "storybook:dcr": "yarn workspace @guardian/dotcom-rendering storybook --no-open --quiet",
    "storybook:ar": "cd apps-rendering && yarn storybook --no-open --quiet",
    "build-storybook": "npm-run-all --parallel build-storybook:*",
    "build-storybook:ar": "cd apps-rendering && yarn build-storybook",
    "build-storybook:cr": "yarn workspace @guardian/common-rendering build-storybook",
    "build-storybook:dcr": "yarn workspace @guardian/dotcom-rendering build-storybook",
    "build-storybook:composed": "yarn workspace storybooks build-storybook",
    "build:dcr": "cd ./dotcom-rendering && yarn makeBuild",
    "chromatic": "chromatic --build-script-name=build-storybook --exit-zero-on-changes",
    "prepare": "husky install"
  },
  "resolutions": {
    "@types/webpack": "^5.28.0",
    "type-fest": "^2.8.0"
  },
  "dependencies": {
    "@guardian/prettier": "^2.0.0",
    "chromatic": "^6.11.4",
    "@babel/core": "^7.16.12",
    "@emotion/cache": "^11.4.0",
    "@emotion/react": "^11.4.1",
    "@emotion/server": "^11.4.0",
    "@guardian/eslint-config": "^1.0.0",
    "@guardian/eslint-config-typescript": "^1.0.1",
    "@guardian/eslint-plugin-source-react-components": "^9.0.0",
    "@guardian/source-foundations": "^7.0.1",
    "@guardian/source-react-components": "^9.1.0",
    "@guardian/source-react-components-development-kitchen": "6.1.1",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/builder-webpack5": "^6.3.11",
    "@storybook/manager-webpack5": "^6.3.7",
    "@storybook/react": "^6.3.7",
    "babel-loader": "^8.2.5",
    "desvg-loader": "^0.1.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "husky": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "typescript": "^4.3.5"
  }
}
